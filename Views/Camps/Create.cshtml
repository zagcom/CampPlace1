@model CampplaceTest1.Models.Camp

@{
    ViewData["Title"] = "Create";
}

<h2>Dodaj nowe miejsce obozowe:</h2>


<hr />
<form asp-controller="Camps" asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="panel panel-default">
                <div class="panel-heading">Informacje ogólne</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Voivodeship" class="control-label"></label>
                        <select asp-for="Voivodeship" asp-items="Html.GetEnumSelectList<Voivodeship>()" class="form-control"></select>
                        <span asp-validation-for="Voivodeship" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <textarea asp-for="Address" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Coordinates" class="control-label"></label>
                        <input asp-for="Coordinates" class="form-control" />
                        <span asp-validation-for="Coordinates" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxPeopleCapacity" class="control-label"></label>
                        <input asp-for="MaxPeopleCapacity" class="form-control" />
                        <span asp-validation-for="MaxPeopleCapacity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContactPoint" class="control-label"></label>
                        <input asp-for="ContactPoint" class="form-control" />
                        <span asp-validation-for="ContactPoint" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailToCP" class="control-label"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">@@</span>
                            <input asp-for="EmailToCP" class="form-control" />                    
                        </div>
                        <span asp-validation-for="EmailToCP" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneToCP" class="control-label"></label>
                        <input asp-for="PhoneToCP" class="form-control" />
                        <span asp-validation-for="PhoneToCP" class="text-danger"></span>
                    </div>                                        
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">Informacje dodatkowe</div>
                <div class="panel-body">
                    <div class="panel panel-default">
                        <div class="panel-heading">Typ wyjazdu</div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="SummerCamp" /> @Html.DisplayNameFor(model => model.SummerCamp)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="WinterCamp" /> @Html.DisplayNameFor(model => model.WinterCamp)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Bivouac" /> @Html.DisplayNameFor(model => model.Bivouac)
                                    </label>
                                </div>
                            </div>                            
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">Dla gałęzi</div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Scouts" /> @Html.DisplayNameFor(model => model.Scouts)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="WolfCubs" /> @Html.DisplayNameFor(model => model.WolfCubs)
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">Okolica</div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Lake" /> @Html.DisplayNameFor(model => model.Lake)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="River" /> @Html.DisplayNameFor(model => model.River)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Mountains" /> @Html.DisplayNameFor(model => model.Mountains)
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">Dostępność</div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="AccessibleByCar" /> @Html.DisplayNameFor(model => model.AccessibleByCar)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Buildings" /> @Html.DisplayNameFor(model => model.Buildings)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Toilet" /> @Html.DisplayNameFor(model => model.Toilet)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Shower" /> @Html.DisplayNameFor(model => model.Shower)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Kitchen" /> @Html.DisplayNameFor(model => model.Kitchen)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="SleepingInside" /> @Html.DisplayNameFor(model => model.SleepingInside)
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">Informacje dodatkowe</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label asp-for="ImagePath" class="control-label"></label>
                        <input type="file" name="file" />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="12"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DistanceFromBuildings" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="DistanceFromBuildings" class="form-control" />
                            <span class="input-group-addon" id="basic-addon2">km</span>
                        </div>
                        <span asp-validation-for="DistanceFromBuildings" class="text-danger"></span>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">Miejsce Ewakuacji</div>
                        <div class="panel-body">
                            <div class="form-group">
                                <textarea asp-for="EvacuationPlace" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="EvacuationPlace" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="EvacuationDistance" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="EvacuationDistance" class="form-control" />
                            <span class="input-group-addon" id="basic-addon2">km</span>
                        </div>
                        <span asp-validation-for="EvacuationDistance" class="text-danger"></span>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">Dane Administracyjne</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">Urząd Gminy</div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <textarea asp-for="Community" class="form-control" rows="5"></textarea>
                                        <span asp-validation-for="Community" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">Sanepid</div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <textarea asp-for="Sanel" class="form-control" rows="5"></textarea>
                                        <span asp-validation-for="Sanel" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">Powiatowa Straż Pożarna</div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <textarea asp-for="PoviatFireBrigade" class="form-control" rows="5"></textarea>
                                        <span asp-validation-for="PoviatFireBrigade" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            
                    </div>
                        
                        <div class="col-md-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">Najbliższy Szpital</div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <textarea asp-for="NearestHospital" class="form-control" rows="5"></textarea>
                                        <span asp-validation-for="NearestHospital" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">Najbliższa Jednostka Straży Pożarnej</div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <textarea asp-for="NearestFireDepartment" class="form-control" rows="5"></textarea>
                                        <span asp-validation-for="NearestFireDepartment" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">Najbliższy Posterunek Policji</div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <textarea asp-for="NearestPoliceStation" class="form-control" rows="5"></textarea>
                                        <span asp-validation-for="NearestPoliceStation" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">Nadleśnictwo</div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <textarea asp-for="Superintendence" class="form-control" rows="5"></textarea>
                                        <span asp-validation-for="Superintendence" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">Najbliższa Parafia</div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <textarea asp-for="NearestParish" class="form-control" rows="5"></textarea>
                                        <span asp-validation-for="NearestParish" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">Najbliższy Sklep</div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <textarea asp-for="NearestMarket" class="form-control" rows="5"></textarea>
                                        <span asp-validation-for="NearestMarket" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="well well-lg">
                        <div class="form-group">
                            <input type="submit" value="Zapisz" class="btn btn-default" />
                        </div>
                        <div>
                            <a asp-action="Index">Wróć do listy</a>
                        </div>
                    </div>
                    
                    
                </div>
            </div>
        </div> 
    </div>
</form>
    

