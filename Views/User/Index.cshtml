@model IEnumerable<ApplicationUser>
    @{
        ViewData["Title"] = "Index";
    }

    <h2>Index</h2>


    <h1>All Users</h1>

    <table class="table table-sm table-hover">
        <tr><th>First Name</th><th>Last Name</th><th>Email</th><th>Roles</th><th>Add Roles</th><th>Details</th><th>Change Password</th><th>Delete</th></tr>
        @foreach (var user in Model)
        {
    <tr>
        <td>@user.FirstName</td>
        <td>@user.LastName</td>
        <td>@user.Email</td>
        <td i-user="@user.Id"></td>
        <td>
            <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">Add Roles</a>
        </td>
        <td>
            <form class="form-inline" asp-action="Details" asp-route-id="@user.Id" method="post">
                <button type="submit" class="btn btn-sm btn-info">
                    Details
                </button>
            </form>
        </td>
        <td>

            <form class="form-inline" asp-action="ChangePassword" asp-route-id="@user.Id" method="post">
                <button type="submit" class="btn btn-sm btn-warning">
                    Change Password
                </button>
            </form>
        </td>
        <td>
            <form class="form-inline" asp-action="Delete" asp-route-id="@user.Id" method="post">
                <button type="submit" class="btn btn-sm btn-danger">
                    Delete
                </button>
            </form>
        </td>

    </tr>
        }
    </table>
