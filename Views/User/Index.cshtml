@model IEnumerable<ApplicationUser>
    @{
        ViewData["Title"] = "Index";
    }

    <h2>Index</h2>


    <h1>All Roles</h1>

    <table class="table table-sm table-bordered table-bordered">
        <tr><th>ID</th><th>Name</th><th>Email</th><th>Roles</th><th>Update</th>@*<th>Delete</th>*@</tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td i-user="@user.Id"></td>
                <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">Manage</a></td>
                @*<td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>*@
            </tr>
        }
    </table>
